
    <div class="content-container">
      <div class="w-layout-grid content-grid faq">
        <div id="w-node-_227a9570-4bfc-9bfe-c3b0-627cf852e7f8-f852e7f5" class="content-block">
          <h2 class="product-info-h1">{{ section.settings.heading }}</h2>
          <div class="faq-section-content">
            <p class="faq-paragraph">{{ section.settings.description | newline_to_br }}</p>
          </div>
        </div>
