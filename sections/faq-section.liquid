              <div class="c-faq-q-text">
                <div class="faq-q-text">{{ block.settings.question }}</div>
              </div>
              <div class="c-faq-icon">
                <div class="_w-faq-icon">
                  <div class="accordion-title">{{ 't2b' | t }}</div>
                </div>
              </div>
            </div>
            <div class="c-faq-a">
