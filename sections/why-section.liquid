<div class="page-padding">
  <div class="container_v2">
    <div class="why-inner-container">
      <h1 class="heading-5">{{ section.settings.heading }}</h1>
      <div class="why-block-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == "reason" -%}
            <div
              id="w-node-_39f740e5-ebfc-7bc1-2eb6-706d7e122fc7-7e122fc0"
              class="why-card"
              block.shopify_attributes>
              <div class="why-card-container" style="background-color: {{block.settings.block-color}}">
                <div
                  class="why-block-contents"
                  {%- if block.settings.block_image == nil -%}
                  style="max-width: 100%; text-align: center; display: flex;
                                      flex-direction: column;
                                      justify-content: center;
                                      align-items: center;"
                  {% endif %}>
                  <div class="why-heading">{{ block.settings.block_heading }}</div>
                  <p class="why-block-p">{{ block.settings.block_description | newline_to_br }}</p>
                </div>
                {%- if block.settings.block_image == nil -%}<img
                    style="display: none;"
                    src="{{ 'why-3-img.png' | asset_url }}"
                    loading="lazy"
                    alt=""
                    class="why-img _3">{%- else -%}<img
                    src="{{ block.settings.block_image.src | img_url: 'master' }}"
                    loading="lazy"
                    alt="{{ block.settings.block_image.alt | escape }}"
                    class="why-img _3"
                    srcset="{{ block.settings.block_image | img_url: '1920x' }} 1920w,{{ block.settings.block_image | img_url: '1600x' }} 1600w,{{ block.settings.block_image | img_url: '1366x' }} 1366w,{{ block.settings.block_image | img_url: '1024x' }} 1024w,{{ block.settings.block_image | img_url: '768x' }} 768w,{{ block.settings.block_image | img_url: '640x' }} 640w">{%- endif -%}
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>


<script>
  var currentSection = document.currentScript.closest('.shopify-section');
  currentSection.setAttribute("class", "why-section");
</script>

{% schema %}
  {
    "presets": [
      {
        "name": "Why Section"
      }
    ],
    "name": "Why Section",
    "tag": "div",
    "class": "why-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Why you need the Meddybear"
      }
    ],
    "blocks": [
      {
        "name": "Reason",
        "type": "reason",
        "settings": [
          {
            "type": "text",
            "id": "block_heading",
            "label": "Block Heading",
            "default": "Teach Your Kids Mindfulness"
          }, {
            "type": "textarea",
            "id": "block_description",
            "label": "Block Description",
            "default": "The guided meditation sessions are designed specifically for kids."
          }, {
            "type": "image_picker",
            "id": "block_image",
            "label": "Block Image"
          }, {
            "type": "color",
            "id": "block-color",
            "label": "Block Color"
          }
        ]
      }
    ]
  }
{% endschema %}