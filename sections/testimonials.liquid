
    <div class="page-padding">
      <div class="container_v2">
        <div class="customer-testimonials-inner-container">
          <div class="customer-reviews-wrapper">
            <h1 class="heading-4">{{ section.settings.heading }}</h1>
            <div class="customer-reviews-tagline">{{ section.settings.description | newline_to_br }}</div>
          </div>
          <div class="customer-reviews">
            <div id="CustomerReviewsSwiper" class="swiper-container swiper-initialized swiper-horizontal swiper-pointer-events swiper-backface-hidden">
              <div class="swiper-wrapper">
                {%- for block in section.blocks -%}{%- if block.type == "review_block" -%}<div class="swiper-slide" block.shopify_attributes>
                  <div class="review-swiper-slide">
                    <div class="review-stars"><img src="{{ 'rw-stars.svg' | asset_url }}" loading="lazy" alt="" class="rw-stars"></div>
                    <p class="review-p">{{ block.settings.review | newline_to_br }}</p>
                    <div class="reviewer-info-wrapper">
                      <div class="reviewer-profile">{%- if block.settings.person_image == nil -%}<img src="{{ 'avatar-image.png' | asset_url }}" loading="lazy" alt="">{%- else -%}<img src="{{ block.settings.person_image.src | img_url: 'master' }}" loading="lazy" alt="{{ block.settings.person_image.alt | escape }}" srcset="{{ block.settings.person_image | img_url: '1920x' }} 1920w,{{ block.settings.person_image | img_url: '1600x' }} 1600w,{{ block.settings.person_image | img_url: '1366x' }} 1366w,{{ block.settings.person_image | img_url: '1024x' }} 1024w,{{ block.settings.person_image | img_url: '768x' }} 768w,{{ block.settings.person_image | img_url: '640x' }} 640w">{%- endif -%}</div>
                      <div>
                        <div class="reviewer-name">{{ block.settings.person_name }}</div>
                        <div class="reviewer-info">{{ block.settings.person_location }}</div>
                      </div>
                    </div>
                  </div>
                </div>{%- endif -%}{%- endfor -%}
              </div>
              <div class="swiper-pagination-reviews">
                <div class="swiper-drag-wrapper">
                  <div class="swiper-drag"></div>
                </div>
                <div class="swiper-arrow-overlay">
                  <div id="NextReview" class="swiper-arrow"><img src="{{ 'ic20-arrow-right.svg' | asset_url }}" loading="lazy" alt=""></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  

<script>var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","customer-testimonials-section");</script>
        
{% schema %}
{
  "name": "Testimonials",
  "tag": "div",
  "class": "customer-testimonials-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customers Love the Meddybear"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    }
  ],
  "blocks": [
    {
      "name": "Review Block",
      "type": "review_block",
      "settings": [
        {
          "type": "text",
          "id": "person_name",
          "label": "Person Name",
          "default": "Marieke van der Meer"
        },
        {
          "type": "text",
          "id": "person_location",
          "label": "Person Location",
          "default": "Uden, Noord Brabant"
        },
        {
          "type": "textarea",
          "id": "review",
          "label": "Review",
          "default": "My son absolutely loves his meditation bear! We use it every night before bed and it has really helped him relax and fall asleep faster. He even asks to use it during the day when he's feeling overwhelmed. The guided relaxation exercises are easy for him to follow and the bear is so soft and cuddly. We are so happy we found this product!"
        },
        {
          "type": "image_picker",
          "id": "person_image",
          "label": "Person Image"
        }
      ]
    }
  ]
}
{% endschema %}