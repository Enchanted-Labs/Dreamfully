{% schema %}
{
"name": "Sidecart",
"settings": [
{
"type": "text",
"id": "title",
"placeholder": "Je Winkelwagen",
"default": "Je Winkelwagen",
"label": "Winkelwagen titel"
},
{
"type": "text",
"id": "reward-gotten",
"placeholder": "Rewards",
"default": "Rewards",
"label": "Reward Gotten"
},{
"type": "liquid",
"id": "reward-not",
"label": "Reward Not Achieved"
},
{
"type": "textarea",
"id": "shipping_text",
"placeholder": "Verzending",
"default": "Verzending",
"label": "Verzending titel"
},
{
"type": "number",
"id": "freeshipping_threshold",
"default": 4000,
"label": "Free shipping threshold"
},
{
"type": "number",
"id": "freegift_threshold",
"default": 6000,
"label": "Free gift threshold"
},
{
"type": "product",
"id": "gift_product",
"label": "Gift product"
},
{
"type": "number",
"id": "shipping",
"default": 499,
"label": "Shipping price"
},
{
"type": "text",
"id": "free_from1",
"placeholder": "(Gratis vanaf",
"default": "(Gratis vanaf",
"label": "Free From 1"
},
{
"type": "text",
"id": "free_from2",
"placeholder": ")",
