{% schema %}
  {
    "presets": [
      {
        "name": "Instagram Gallery"
      }
    ],
    "name": "Instagram Gallery",
    "tag": "div",
    "class": "instagram-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Mindful Moments with the Meditation Bear"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Follow Us On Our Socials"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Follow us"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"
      }, {
        "type": "text",
        "id": "button_url_text",
        "label": "Button Url Text",
        "default": "{{ section.settings.button_label }}"
      }
    ]
  }
{% endschema %}